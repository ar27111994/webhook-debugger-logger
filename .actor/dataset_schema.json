{
  "actorSpecification": 1,
  "fields": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "title": "Event ID",
        "description": "Unique identifier for this captured request",
        "example": "evt_z8X2n0P5q1"
      },
      "requestId": {
        "type": "string",
        "title": "Request ID",
        "description": "Unique request tracer ID",
        "example": "req_12345abcdef"
      },
      "signatureValid": {
        "type": "boolean",
        "title": "Sig Valid",
        "description": "Whether the webhook signature was verified",
        "example": true
      },
      "timestamp": {
        "type": "string",
        "format": "date-time",
        "title": "Timestamp",
        "description": "UTC time of the incoming request",
        "example": "2025-12-28T21:40:24.852Z"
      },
      "webhookId": {
        "type": "string",
        "title": "Webhook ID",
        "description": "Unique ID of the target webhook endpoint",
        "example": "wh_a7B2k9L1p4"
      },
      "method": {
        "type": "string",
        "title": "Method",
        "description": "HTTP Method (GET, POST, etc.)",
        "example": "POST"
      },
      "headers": {
        "type": "object",
        "title": "Headers",
        "description": "Full HTTP request headers",
        "example": {
          "content-type": "application/json",
          "user-agent": "axios/1.13.2"
        }
      },
      "query": {
        "type": "object",
        "title": "Query",
        "description": "URL query parameters",
        "example": {
          "__status": "200"
        }
      },
      "body": {
        "type": "string",
        "title": "Body",
        "description": "The raw or parsed request body",
        "example": "{\"status\": \"success\"}"
      },
      "contentType": {
        "type": "string",
        "title": "Content-Type",
        "description": "MIME type of the request body",
        "example": "application/json"
      },
      "size": {
        "type": "integer",
        "title": "Size (Bytes)",
        "description": "Request body size in bytes",
        "example": 24
      },
      "processingTime": {
        "type": "integer",
        "title": "Latency (ms)",
        "description": "Time taken to process the request",
        "example": 5
      },
      "remoteIp": {
        "type": "string",
        "title": "Source IP",
        "description": "IP address of the sender",
        "example": "1.2.3.4"
      },
      "userAgent": {
        "type": "string",
        "title": "User-Agent",
        "description": "Client user-agent string",
        "example": "Stripe/1.0"
      },
      "statusCode": {
        "type": "integer",
        "title": "Status",
        "description": "HTTP response status code returned to the sender",
        "example": 200
      },
      "responseBody": {
        "type": "string",
        "title": "Response Body",
        "description": "Body returned to the webhook sender",
        "example": "{\"received\": true}"
      },
      "responseHeaders": {
        "type": "object",
        "title": "Response Headers",
        "description": "Headers returned to the webhook sender",
        "example": { "content-type": "application/json" }
      },
      "signatureProvider": {
        "type": "string",
        "title": "Sig Provider",
        "description": "The provider used for verification (e.g., stripe, github)",
        "example": "stripe"
      },
      "signatureError": {
        "type": "string",
        "title": "Sig Error",
        "description": "Error message if signature verification failed",
        "example": "Signature mismatch"
      }
    }
  },
